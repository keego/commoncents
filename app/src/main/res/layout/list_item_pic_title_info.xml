<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_min_height"
    android:layout_margin="@dimen/list_item_margin_half"
    card_view:cardCornerRadius="@dimen/cardview_default_elevation">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="@dimen/list_item_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_picture"
            android:scaleType="fitCenter"
            android:layout_width="@dimen/list_item_picture_size"
            android:layout_height="@dimen/list_item_picture_size"
            android:layout_marginRight="@dimen/list_item_subitem_margin"
            android:layout_marginEnd="@dimen/list_item_subitem_margin" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="3">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_title"
                android:text="Title" />

            <TextView
                android:id="@+id/item_subtitle"
                android:layout_marginTop="@dimen/list_item_subitem_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_subtitle"
                android:text="Subtitle" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_info"
            android:layout_marginLeft="@dimen/list_item_subitem_margin"
            android:layout_marginStart="@dimen/list_item_subitem_margin"
            android:layout_marginRight="@dimen/list_item_subitem_margin"
            android:layout_marginEnd="@dimen/list_item_subitem_margin"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_list_item_info"
            android:text="Info"/>

    </LinearLayout>

</android.support.v7.widget.CardView>